{% extends 'base.html.twig' %}

{% block title %}Posts
{% endblock %}

{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Author</th>
                <th scope="col">Date</th>
                <th scope="col">Image</th>
                <th scope="col">Message</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.title }}</td>
                <td>{{ post.author }}</td>
                <td>{{ post.createdAt|date("m/d/Y") }}</td>
                <td>
                    <img src="{{ asset('uploads/images/') ~ post.image }}" width="30" height="30" class="d-inline-block align-top" alt="">
                </td>
                <td>{{ post.content }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}