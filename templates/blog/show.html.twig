{% extends 'base.html.twig' %}

{% block title %}
    {{ post.title }}
{% endblock %}

{% block body %}
    <div class="jumbotron">
        <h1 class="display-4">{{ post.title }}</h1>
        <p class="lead">
            {{ post.author }}
            <br>
            {{ post.subtitle }}
            <br>
            {{ post.createdAt|date("m/d/Y") }}
        </p>
        <hr class="my-4">
        <p>
        <div class="row">
            <div class="col">
                {{ post.content }}
            </div>
            <div class="col">
                <img src="{{ asset('uploads/images/') ~ post.image }}" width="100%" height="100%" class="d-inline-block align-top" alt="">
            </div>
        </div>
        <a class="btn btn-primary" href="{{ path('update_blog', { 'id': post.id }) }}" type="button">Edit</a>
        <a class="btn btn-primary" href="{{ path('blog_list') }}" type="button">Back</a>
        </p>
    </div>
{% endblock %}